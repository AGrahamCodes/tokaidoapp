#!/bin/sh

tokaidoapp.install.dependencies()
{
  typeset _set _lib

  for _set in libraries
  do
    set_install ${_set}
  done

  for _lib in libyaml #openssl
  do
    includes ${_lib}
    package install name ${_lib} --disable-shared
  done
}

tokaidoapp_prefetch()
{
  package define \
    file "ruby-${package_version}.${archive_format}" \
    dir  "ruby-${package_version}"
}
